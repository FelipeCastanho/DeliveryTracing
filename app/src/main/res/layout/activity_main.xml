<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoyo.deliverytracing.MainActivity">


    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:text="@string/bienvenido"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/logoInicio" />

    <ImageView
        android:id="@+id/logoInicio"
        android:layout_width="130dp"
        android:layout_height="94dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@mipmap/imagen1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/textInputLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="buttonTapped"
        android:text="@string/login"
        android:layout_below="@+id/rastrear"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rastrear"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="74dp"
        android:onClick="buttonTapped"
        android:text="@string/rastrear"
        android:textAlignment="center"
        android:layout_below="@+id/codigo"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

    <EditText
        android:id="@+id/codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingreseCodigo"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/logoInicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
